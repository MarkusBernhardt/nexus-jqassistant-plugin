<security>
	<version>2.0.3</version>

	<roles>
		<role>
			<id>jqassistant-admin</id>
			<name>jQAssistant Admin</name>
			<description>Gives admin access to jQAssistant</description>
			<sessionTimeout>60</sessionTimeout>
			<privileges>
				<privilege>jqassistant-query</privilege>
				<privilege>jqassistant-config</privilege>
			</privileges>
		</role>
		<role>
			<id>jqassistant-user</id>
			<name>jQAssistant User</name>
			<description>Gives user access to jQAssistant</description>
			<sessionTimeout>60</sessionTimeout>
			<privileges>
				<privilege>jqassistant-query</privilege>
			</privileges>
		</role>
	</roles>

	<privileges>
		<privilege>
			<id>jqassistant-query</id>
			<type>method</type>
			<name>jQAssistant Query</name>
			<description>Give permission to execute queries against the jQAssistant database</description>
			<properties>
				<property>
					<key>method</key>
					<value>*</value>
				</property>
				<property>
					<key>permission</key>
					<value>nexus:jqassistant-query</value>
				</property>
			</properties>
		</privilege>
		<privilege>
			<id>jqassistant-config</id>
			<type>method</type>
			<name>jQAssistant Configuration</name>
			<description>Give permission to administer jQAssistant configuration</description>
			<properties>
				<property>
					<key>method</key>
					<value>*</value>
				</property>
				<property>
					<key>permission</key>
					<value>nexus:jqassistant-config</value>
				</property>
			</properties>
		</privilege>
	</privileges>

</security>
